---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
console.log(frontmatter);
const formatImgul = (url) => {
  return "/src/assets/img" + url;
};

const { title, author, pubDate, tags } = Astro.props;
---

<BaseLayout pageTitle={title}>
  <div class="blog">
    <h1 class="title">{title}</h1>
    <div class="date">
      <p>pub {pubDate}</p>
    </div>
    {tags && <div class="tags">#{[...tags]}</div>}
    <slot />
  </div>
</BaseLayout>

<style>
  .blog {
    margin: 10px 0;
    background-color: #fff;
    border-radius: 8px;
    padding: 10px 32px;
    text-align: justify;
  }
  .title {
    margin: 8px 0;
  }
  .date {
    font-size: 12px;
    color: #999;
    p {
      padding: 0;
    }
    .tags {
      font-size: 14px;
    }
    p {
      word-break: break-all;
      word-wrap: break-word;
    }
    blockquote {
      margin: 0 6px;
    }
  }
  @media screen and (min-width: 636px) {
    .blog {
      padding: 2px 42px;
      blockquote {
        margin: 0 18px;
      }
    }
  }
</style>
