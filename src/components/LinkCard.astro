---
const { iconur = "", bgcolor = "#39c", url } = Astro.props;
---

<style define:vars={{ iconur, bgcolor }}>
  li {
    width: 35px;
    height: 35px;
    margin: 0 10px;
    button {
      border: none;
      background: none;
      color: inherit;
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      border-radius: 50%;
      background: var(--bgcolor);
      a {
        box-sizing: border-box;
        display: flex;
        align-items: center;
        padding: 4px;
      }
    }
  }
  .icon {
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--iconurl);
  }
</style>

<li>
  <button>
    <a href={url}> <i class="icon"> <slot /></i></a>
  </button>
</li>
