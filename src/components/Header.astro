---
import Humburger from "./Humburger.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
---

<header class="header">
  <Humburger />
  <Navigation />
  <!-- <ThemeIcon /> -->
</header>

<style>
  .header {
    background: #eee;
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: center;
  }
  @media screen and (min-width: 636px) {
    .header {
      background: #fff;
      width: 100%;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      display: flex;
      justify-content: center;
    }
  }
</style>
