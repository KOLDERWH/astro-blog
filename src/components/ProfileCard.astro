---
import { Image } from "astro:assets";
const { postcount, tagsCount } = Astro.props;
import avatar from "@/assets/avatar/avatar.jpg";
---

<div class="profilecard">
  <div class="avatar">
    <Image src={avatar} alt="avatra" width="184" height="184" />
    <!-- <img src="/src/assets/avatar/avatar.jpg" alt="" /> -->
  </div>
  <div class="author">Kolderwh</div>
  <div class="status">
    <a href="/">
      <div class="item">POSTS</div>
      <div>{postcount}</div>
    </a>
    <a href="/tags">
      <div class="item">TAGS</div>
      <div>{tagsCount}</div>
    </a>
  </div>
  <div class="extralink"></div>
</div>

<style>
  .profilecard {
    background: #eee;
    border-radius: 16px;
    padding: 10px 0;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    -webkit-box-shadow: 7px 3px 15px -4px #333;
    box-shadow: 7px 3px 15px -4px #333;
    &:hover {
      -webkit-box-shadow: 3px 3px 12px 7px #333;
      box-shadow: 3px 3px 12px 7px #333;
    }
    .avatar {
      margin: 20px 0;
      width: 150px;
      height: 150px;
      img {
        object-fit: cover;
        border-radius: 50%;
        width: 100%;
        height: 100%;
      }
    }
    .author {
      margin: 10px 0;
      font-weight: bold;
    }
    .status {
      box-sizing: border-box;
      padding: 0 18px;
      width: 100%;
      display: flex;
      justify-content: space-around;
      a {
        display: flex;
        text-align: center;
        flex-direction: column;
      }
      .item {
        cursor: pointer;
        &:hover {
          color: var(--hovercolor);
        }
      }
    }
  }
</style>
