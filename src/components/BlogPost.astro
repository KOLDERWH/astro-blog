---
import { Icon } from "astro-icon";
const { title, pubDate, description, tags } = Astro.props;
const posturl = String("/posts/" + title);
---

<li class="content">
  <div class="title">
    <a href={posturl}>{title}</a>
  </div>
  <div class="desc">{description}</div>
  {
    tags && (
      <div class="tags">
        {tags.map((tag) => {
          return (
            <div class="wrapper">
              <a href={"/tags/" + tag}>
                <div class="tag">
                  <Icon name="tag" />
                </div>
                {tag}
              </a>
            </div>
          );
        })}
      </div>
    )
  }
  {pubDate && <div class="time">{pubDate}</div>}
</li>

<style>
  .content {
    cursor: pointer;
    background-color: #fff;
    font-size: 18px;
    margin-bottom: 16px;
    border-radius: 16px;
    font-weight: bold;
    padding: 0 10px;
    position: relative;
    -webkit-box-shadow: 7px 3px 15px -4px #333;
    box-shadow: 7px 3px 15px -4px #333;
    &:hover {
      -webkit-box-shadow: 3px 3px 12px 7px #333;
      box-shadow: 3px 3px 12px 7px #333;
    }
    > .title {
      font-size: 26px;
      text-align: left;
      display: inline-block;
      a {
        display: inline-block;
        padding: 0 20px 10px;
      }
    }
    > .desc {
      font-size: 14px;
      color: #555;
      font-weight: normal;
      overflow: hidden;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
    }
    > .tags {
      display: flex;
      font-weight: normal;
      font-size: 14px;
      position: absolute;
      .wrapper {
        margin-right: 6px;
        a {
          display: flex;
          align-items: center;
          &:hover {
            color: var(--hovercolor);
          }
        }
        .tag {
          width: 15px;
          height: 16px;
        }
      }
    }
    > .time {
      color: #999;
      padding: 0 10px;
      text-align: end;
    }
  }
  .title:hover {
    a {
      color: var(--hovercolor);
    }
  }
</style>
