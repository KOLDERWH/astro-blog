---
import { Icon } from "astro-icon";
const { title, pubDate, description, tags } = Astro.props;
const posturl = String("/posts/" + title);
---

<li class="content">
  <!-- <a class="container" href={posturl}> -->
  <div class="title">
    <a href={posturl}> {title}</a>
  </div>
  <div class="desc">{description}</div>
  <div class="time">{pubDate}</div>
  {
    tags && (
      <div class="tags">
        {tags.map((tag) => {
          return (
            <div class="wrapper">
              <a class="tagcontainer" href={"/tags/" + tag}>
                <div class="tag">
                  <Icon name="tag" />
                </div>
                <span>{tag}</span>
              </a>
            </div>
          );
        })}
      </div>
    )
  }
  <!-- </a> -->
</li>

<style>
  .content {
    cursor: pointer;
    background-color: #fff;
    font-size: 18px;
    margin-bottom: 16px;
    border-radius: 16px;
    font-weight: bold;
    padding: 6px 10px;
    position: relative;
    -webkit-box-shadow: 7px 3px 15px -4px #333;
    box-shadow: 7px 3px 15px -4px #333;
    &:hover {
      /* background-color: var(--hovercolor); */
      -webkit-box-shadow: 3px 3px 12px 7px #333;
      box-shadow: 3px 3px 12px 7px #333;
    }
    /* .container {
      display: inline-block;
    } */

    .title {
      font-size: 26px;
      text-align: left;
      display: inline-block;
      display: inline-block;
      padding: 0 20px 10px;
      &:hover {
        a {
          color: var(--hovercolor);
        }
      }
    }
    .desc {
      font-size: 14px;
      color: #555;
      font-weight: normal;
      overflow: hidden;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
    }
    .tags {
      display: flex;
      font-weight: normal;
      font-size: 14px;
      position: absolute;
      bottom: 6px;
      > .wrapper {
        margin-right: 6px;
        > .tagcontainer {
          display: flex;
          align-items: center;
          &:hover {
            color: var(--hovercolor);
          }
          .tag {
            width: 15px;
            height: 16px;
          }
        }
      }
    }
    .time {
      color: #999;
      padding: 0 10px;
      text-align: end;
    }
  }
</style>
